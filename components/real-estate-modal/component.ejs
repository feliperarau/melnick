<% 
// Params
var args = typeof args !== 'undefined' ? args : '';
let cssClass = args.cssClass ?? '';
%>

<div class="_real-estate-modal <%= cssClass %>">
    <!-- Modal -->
    <div class="modal fade" id="real-estate-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-wrapper modal-dialog modal-fullscreen">
            <div class="modal-content">
                <div class="modal-header">
                    <ul class="nav nav-tabs remove-scrollbar main-gallery-tab" role="tablist">
                        <li class="nav-item group first" role="presentation">
                            <button class="nav-link active" id="gallery-0-tab" data-bs-toggle="tab" data-bs-target="#gallery-0" type="button" role="tab" aria-controls="gallery-0" aria-selected="true"><i class="icon icon-camera"></i> Imagens</button>
                        </li>
                        <li class="nav-item group" role="presentation">
                            <button class="nav-link" id="gallery-1-tab" data-bs-toggle="tab" data-bs-target="#gallery-1" type="button" role="tab" aria-controls="gallery-1" aria-selected="false">Decorados</button>
                        </li>
                        <li class="nav-item group" role="presentation">
                            <button class="nav-link" id="gallery-2-tab" data-bs-toggle="tab" data-bs-target="#gallery-2" type="button" role="tab" aria-controls="gallery-2" aria-selected="false">Ilustração</button>
                        </li>
                        <li class="nav-item group last" role="presentation">
                            <button class="nav-link" id="gallery-3-tab" data-bs-toggle="tab" data-bs-target="#gallery-3" type="button" role="tab" aria-controls="gallery-3" aria-selected="false">Maquetes</button>
                        </li>

                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="gallery-4-tab" data-bs-toggle="tab" data-bs-target="#gallery-4" type="button" role="tab" aria-controls="gallery-4" aria-selected="false"><i class="icon icon-plant"></i> Plantas</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="gallery-5-tab" data-bs-toggle="tab" data-bs-target="#gallery-5" type="button" role="tab" aria-controls="gallery-5" aria-selected="false"><i class="icon icon-360"></i> Tour 360°</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="gallery-6-tab" data-bs-toggle="tab" data-bs-target="#gallery-6" type="button" role="tab" aria-controls="gallery-6" aria-selected="false"><i class="icon icon-video-library"></i> Vídeos</button>
                        </li>
                    </ul>

                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"><i class="icon icon-close"></i></button>
                </div>
                <div class="modal-body">
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="gallery-0" role="tabpanel" aria-labelledby="gallery-0-tab">
                            <%- include( './tab-inner.ejs' ); %>
                        </div>
                        <div class="tab-pane fade" id="gallery-1" role="tabpanel" aria-labelledby="gallery-1-tab">
                            <%- include( './tab-inner.ejs' ); %>
                        </div>
                        <div class="tab-pane fade" id="gallery-2" role="tabpanel" aria-labelledby="gallery-2-tab">
                            <%- include( './tab-inner.ejs' ); %>
                        </div>
                        <div class="tab-pane fade" id="gallery-3" role="tabpanel" aria-labelledby="gallery-3-tab">
                            <%- include( './tab-inner.ejs' ); %>
                        </div>
                        <div class="tab-pane fade" id="gallery-4" role="tabpanel" aria-labelledby="gallery-4-tab">
                            <%- include( './tab-inner.ejs' ); %>
                        </div>
                        <div class="tab-pane fade" id="gallery-5" role="tabpanel" aria-labelledby="gallery-5-tab">
                            <%- include( './tab-inner.ejs' ); %>
                        </div>
                        <div class="tab-pane fade" id="gallery-6" role="tabpanel" aria-labelledby="gallery-6-tab">
                            <%- include( './tab-inner.ejs' ); %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>