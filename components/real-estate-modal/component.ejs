<% 
// Params
var args = typeof args !== 'undefined' ? args : '';
let cssClass = args.cssClass ?? '';
%>

<div class="_real-estate-modal <%= cssClass %>">
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#real-estate-modal">
        Launch demo modal
    </button>

    <!-- Modal -->
    <div class="modal fade in show d-block" id="real-estate-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-wrapper">
            <div class="modal-inner">
                <div class="modal-header">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item group first" role="presentation">
                            <button class="nav-link active" id="imagens-tab" data-bs-toggle="tab" data-bs-target="#imagens" type="button" role="tab" aria-controls="imagens" aria-selected="true"><i class="icon icon-camera"></i> Imagens</button>
                        </li>
                        <li class="nav-item group" role="presentation">
                            <button class="nav-link" id="decorados-tab" data-bs-toggle="tab" data-bs-target="#decorados" type="button" role="tab" aria-controls="decorados" aria-selected="false">Decorados</button>
                        </li>
                        <li class="nav-item group" role="presentation">
                            <button class="nav-link" id="ilustracao-tab" data-bs-toggle="tab" data-bs-target="#ilustracao" type="button" role="tab" aria-controls="ilustracao" aria-selected="false">Ilustração</button>
                        </li>
                        <li class="nav-item group last" role="presentation">
                            <button class="nav-link" id="maquetes-tab" data-bs-toggle="tab" data-bs-target="#maquetes" type="button" role="tab" aria-controls="maquetes" aria-selected="false">Maquetes</button>
                        </li>

                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="plantas-tab" data-bs-toggle="tab" data-bs-target="#plantas" type="button" role="tab" aria-controls="plantas" aria-selected="false"><i class="icon icon-plant"></i> Plantas</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="tour-tab" data-bs-toggle="tab" data-bs-target="#tour" type="button" role="tab" aria-controls="tour" aria-selected="false"><i class="icon icon-360"></i> Tour 360°</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="videos-tab" data-bs-toggle="tab" data-bs-target="#videos" type="button" role="tab" aria-controls="videos" aria-selected="false"><i class="icon icon-video-library"></i> Vídeos</button>
                        </li>
                    </ul>

                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"><i class="icon icon-close"></i></button>
                </div>
                <div class="modal-body">
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="imagens" role="tabpanel" aria-labelledby="imagens-tab">
                            <div class="gallery-slider">
                                <div class="swiper">
                                    <div class="swiper-wrapper">
                                        <% for ( let i=1; i<=10; i++) { %>
                                        <div class="swiper-slide">
                                            <span class="slide-caption">Fachada <%= i %></span>
                                            <img class="thumbnail" src="../../assets/img/real-estate-inner/gallery-<%= i %>.jpeg" />
                                        </div>
                                        <% } %>
                                    </div>
                                </div>

                                <div class="swiper-nav-container">
                                    <button class="swiper-nav swiper-prev">
                                        <i class="icon icon-chevron-left"></i>
                                    </button>

                                    <button class="swiper-nav swiper-next">
                                        <i class="icon icon-chevron-right"></i>
                                    </button>
                                </div>
                            </div>

                            <div class="slider-thumbnails">
                                <%- 
                                include( '../button-icon/component.ejs', { args: {
                                    icon: 'chevron-right',
                                    cssClass: 'thumbnails-toggler'
                                } } );
                                %>
                                <div class="swiper">
                                    <div class="swiper-wrapper">
                                        <% for ( let i=1; i<=10; i++) { %>

                                        <div class="swiper-slide">
                                            <img class="thumbnail" src="../../assets/img/real-estate-inner/gallery-<%= i %>.jpeg" />
                                        </div>
                                        <% } %>
                                    </div>
                                </div>

                                <div class="swiper-nav-container">
                                    <%- 
                                    include( '../button-icon/component.ejs', { args: {
                                        icon: 'chevron-left',
                                        cssClass: 'swiper-nav swiper-prev'
                                    } } );
                                    %>
                                    <%- 
                                    include( '../button-icon/component.ejs', { args: {
                                        icon: 'chevron-right',
                                        cssClass: 'swiper-nav swiper-next'
                                    } } );
                                    %>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="decorados" role="tabpanel" aria-labelledby="decorados-tab">
                            <div class="gallery-slider">
                                <div class="swiper">
                                    <div class="swiper-wrapper">
                                        <% for ( let i=1; i<=10; i++) { %>
                                        <div class="swiper-slide">
                                            <span class="slide-caption">Decorados <%= i %></span>
                                            <img class="thumbnail" src="../../assets/img/real-estate-inner/gallery-<%= i %>.jpeg" />
                                        </div>
                                        <% } %>
                                    </div>
                                </div>

                                <div class="swiper-nav-container">
                                    <button class="swiper-nav swiper-prev">
                                        <i class="icon icon-chevron-left"></i>
                                    </button>

                                    <button class="swiper-nav swiper-next">
                                        <i class="icon icon-chevron-right"></i>
                                    </button>
                                </div>
                            </div>

                            <div class="slider-thumbnails">
                                <%- 
                            include( '../button-icon/component.ejs', { args: {
                                icon: 'chevron-right',
                                cssClass: 'thumbnails-toggler'
                            } } );
                            %>
                                <div class="swiper">
                                    <div class="swiper-wrapper">
                                        <% for ( let i=1; i<=10; i++) { %>

                                        <div class="swiper-slide">
                                            <img class="thumbnail" src="../../assets/img/real-estate-inner/gallery-<%= i %>.jpeg" />
                                        </div>
                                        <% } %>
                                    </div>
                                </div>

                                <div class="swiper-nav-container">
                                    <%- 
                                include( '../button-icon/component.ejs', { args: {
                                    icon: 'chevron-left',
                                    cssClass: 'swiper-nav swiper-prev'
                                } } );
                                %>
                                    <%- 
                                include( '../button-icon/component.ejs', { args: {
                                    icon: 'chevron-right',
                                    cssClass: 'swiper-nav swiper-next'
                                } } );
                                %>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="ilustracao" role="tabpanel" aria-labelledby="ilustracao-tab">Ilustração....</div>
                        <div class="tab-pane fade" id="maquetes" role="tabpanel" aria-labelledby="maquetes-tab">Maquetes....</div>
                        <div class="tab-pane fade" id="plantas" role="tabpanel" aria-labelledby="plantas-tab">Plantas....</div>
                        <div class="tab-pane fade" id="tour" role="tabpanel" aria-labelledby="tour-tab">Tour....</div>
                        <div class="tab-pane fade" id="videos" role="tabpanel" aria-labelledby="videos-tab">Videos</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>