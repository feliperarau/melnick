<%
// Defaults
var args = typeof args !== 'undefined' ? args : {};

var cssClass = args.cssClass ?? '';
var tag = args.tag ?? 'a';
var type = args.type ?? 'button';
var label = args.label ?? '';
var link = args.link ?? '#';
var icon = args.icon ?? '';
var iconClass = args.iconClass ?? '';
var variation = args.variation ?? 'default';

var btnIcon = ! icon ? '' : `<i class="icon icon-${icon} ${iconClass}"></i>`;
%>

<% if( tag === 'button' ) { %>
<<%= tag %> type="<%= tag %>" class="_button _button-default variation-<%= variation %> <%= cssClass %>">
    <%- btnIcon %>
    <%- label %>
</<%= tag %>>

<% } else { %>
<<%= tag %> href="<%= link %>" class="_button _button-default variation-<%= variation %> <%= cssClass %>">
    <%- btnIcon %>
    <%- label %>
</<%= tag %>>
<% } %>