<% 
const paramCssClass = typeof cssClass !== 'undefined' ? cssClass : '';
const paramTitle = typeof title !== 'undefined' ? title : '';
const paramMenuItems = typeof menuItems !== 'undefined' ? menuItems : [];
%>

<nav class="_menu-list <%= paramCssClass %>">
    <% if ( paramTitle ) { %>
    <h2 class="menu-title"><%= paramTitle %></h2>
    <%} %>

    <ul class="menu">
        <% paramMenuItems.forEach(function(menuItem) { %>
        <li class="menu-item">
            <a href="<%= menuItem.href %>" target="<%= menuItem.external ? '_blank' : '' %>">
                <% if ( menuItem.icon ) { %>
                <i class="icon icon-before icon-<%= menuItem.icon %>"></i>
                <% } %>

                <span class="menu-label"><%= menuItem.label %></span>

                <% if ( menuItem.external ) { %>
                <i class="icon icon-after icon-external"></i>
                <% } %>
            </a>
        </li>
        <% }); %>
    </ul>
</nav>